    <script>
      document.querySelectorAll('input[type="number"]').forEach(input => {
        input.disabled = true;
      });

      document.querySelectorAll('input[type="checkbox"]').forEach(checkbox => {
        checkbox.addEventListener('change', () => {
          const qtyInput = document.getElementById(checkbox.id + '_qty');
          if (qtyInput) {
            if (checkbox.checked) {
              qtyInput.disabled = false;
              qtyInput.value = 1;
            } else {
              qtyInput.disabled = true;
              qtyInput.value = 0;
            }
          }
        });
      });

      // ŸÉŸàÿØ ÿ¨ÿßŸÅÿßÿ≥ŸÉÿ±Ÿäÿ®ÿ™ ŸÑŸÑÿ™ÿ≠ŸÇŸÇ ŸÖŸÜ ÿ£ÿ±ŸÇÿßŸÖ ÿßŸÑŸáÿßÿ™ŸÅ ÿßŸÜŸáŸÖ ŸÖÿ¥ ŸÜŸÅÿ≥ ÿßŸÑÿ±ŸÇŸÖ
      document.querySelector('form').addEventListener('submit', function(e) {
          const mainum = document.querySelector('input[name="number"]').value;
          const anothernum = document.querySelector('input[name="number2"]').value;

          if (mainum  === anothernum) {
              alert("‚ùó ÿßŸÑÿ±ŸÇŸÖ ÿßŸÑÿßÿ≠ÿ™Ÿäÿßÿ∑Ÿä Ÿäÿ¨ÿ® ÿ£ŸÜ ŸäŸÉŸàŸÜ ŸÖÿÆÿ™ŸÑŸÅŸãÿß ÿπŸÜ ÿßŸÑÿ±ŸÇŸÖ ÿßŸÑÿ£ÿ≥ÿßÿ≥Ÿä.");
              e.preventDefault(); // ŸäŸÖŸÜÿπ ÿ•ÿ±ÿ≥ÿßŸÑ ÿßŸÑÿ∑ŸÑÿ®
          }
      });
    </script>


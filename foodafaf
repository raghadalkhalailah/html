    <script>
      document.querySelectorAll('input[type="number"]').forEach(input => {
        input.disabled = true;
      });

      document.querySelectorAll('input[type="checkbox"]').forEach(checkbox => {
        checkbox.addEventListener('change', () => {
          const qtyInput = document.getElementById(checkbox.id + '_qty');
          if (qtyInput) {
            if (checkbox.checked) {
              qtyInput.disabled = false;
              qtyInput.value = 1;
            } else {
              qtyInput.disabled = true;
              qtyInput.value = 0;
            }
          }
        });
      });

      // ÙƒÙˆØ¯ Ø¬Ø§ÙØ§Ø³ÙƒØ±ÙŠØ¨Øª Ù„Ù„ØªØ­Ù‚Ù‚ Ù…Ù† Ø£Ø±Ù‚Ø§Ù… Ø§Ù„Ù‡Ø§ØªÙ Ø§Ù†Ù‡Ù… Ù…Ø´ Ù†ÙØ³ Ø§Ù„Ø±Ù‚Ù…
      document.querySelector('form').addEventListener('submit', function(e) {
          const mainum = document.querySelector('input[name="number"]').value;
          const anothernum = document.querySelector('input[name="number2"]').value;

          if (mainum  === anothernum) {
              alert("â— Ø§Ù„Ø±Ù‚Ù… Ø§Ù„Ø§Ø­ØªÙŠØ§Ø·ÙŠ ÙŠØ¬Ø¨ Ø£Ù† ÙŠÙƒÙˆÙ† Ù…Ø®ØªÙ„ÙÙ‹Ø§ Ø¹Ù† Ø§Ù„Ø±Ù‚Ù… Ø§Ù„Ø£Ø³Ø§Ø³ÙŠ.");
